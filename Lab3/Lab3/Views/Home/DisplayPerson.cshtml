@*
    Make this view a strongly typed view, using the Person model
    Pass the person data from DisplayPerson action to DisplayPerson view
    Display the collected results on DisplayPerson view.
*@

@model Lab3.Models.Person

@{
    ViewData["Title"] = "View Person";
}

<h2>Your Created Person</h2>
<table>
    <tr>
        <td>First Name: </td>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <td>Last Name: </td>
        <td>@Model.LastName</td>
    </tr>
    <tr>
        <td>Age: </td>
        <td>@Model.Age</td>
    </tr>
    <tr>
        <td>Email Address: </td>
        <td>@Model.EmailAddress</td>
    </tr>
    <tr>
        <td>Description: </td>
        <td>@Model.Description</td>
    </tr>
</table>
